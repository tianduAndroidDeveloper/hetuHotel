<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="false"><shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <corners android:radius="5dip" />

            <stroke android:width="4px" android:color="@android:color/darker_gray" />
        </shape></item>
    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="#ffffff" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <stroke android:width="4px" android:color="@color/red_light" />

            <corners android:radius="5dip" />
        </shape></item>

</selector>