<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false"><shape android:shape="rectangle">
            <solid android:color="@color/red" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dip" android:topRightRadius="0dp" />
        </shape></item>
    <item android:state_pressed="true"><shape android:shape="rectangle">
            <solid android:color="@color/red_light" />

            <padding android:bottom="0dp" android:left="0dp" android:right="0dp" android:top="0dp" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dip" android:topRightRadius="0dp" />
        </shape></item>

</selector>