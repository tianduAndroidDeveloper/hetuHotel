<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:makeramen="http://schemas.android.com/apk/res/com.kingtopgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/gray_light"
            android:orientation="vertical"
            android:padding="5dp" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/banner02" >

                <com.makeramen.RoundedImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_centerInParent="true"
                    android:src="@drawable/scope_title"
                    makeramen:corner_radius="100dp" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/tv_all"
                    style="@style/Personal_TextView"
                    android:drawableLeft="@drawable/order"
                    android:text="全部订单" />

                <TextView
                    android:id="@+id/tv_await"
                    style="@style/Personal_TextView"
                    android:drawableLeft="@drawable/prefer"
                    android:text="待接单" />

                <TextView
                    android:id="@+id/tv_already"
                    style="@style/Personal_TextView"
                    android:drawableLeft="@drawable/prefer"
                    android:text="已接单" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:background="@drawable/red_bg"
                android:padding="10dp"
                android:text="联系客服"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="5dp"
                android:text="工作时间：9:30-22:00"
                android:textColor="@color/black" />
        </LinearLayout>
    </ScrollView>

</RelativeLayout>