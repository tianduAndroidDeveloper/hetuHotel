<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:makeramen="http://schemas.android.com/apk/res/com.kingtopgroup"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:background="@color/all"
    android:orientation="vertical" >
    
    <LinearLayout android:layout_height="wrap_content"
        android:id="@+id/messager_detail_listview"
        android:layout_width="fill_parent"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/linear_boder"
                android:orientation="vertical"
                android:padding="5dp" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp" >

                    <com.makeramen.RoundedImageView
                        android:id="@+id/headphoto"
                        android:layout_width="70dp"
                        android:layout_height="70dp"
                        android:layout_marginRight="15dp"
                        android:background="@drawable/circle_bg"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_launcher"
                        makeramen:corner_radius="100dp" />

                    <TextView
                        android:id="@+id/name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/headphoto"
                        android:text="李兴龙  男" />

                    <TextView
                        android:id="@+id/RankTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/name"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@+id/headphoto"
                        android:background="@drawable/red_border_all"
                        android:paddingBottom="5dp"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp"
                        android:paddingTop="5dp"
                        android:text="高级"
                        android:textColor="@color/red" />

                    <TextView
                        android:id="@+id/address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/RankTitle"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/headphoto"
                        android:drawableLeft="@drawable/location"
                        android:gravity="center_vertical"
                        android:drawablePadding="5dp"
                        android:text="盘龙区" />

                    <TextView
                        android:id="@+id/discuss_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:drawableLeft="@drawable/like_off"
                        android:drawablePadding="5dp"
                        android:gravity="center_vertical"
                        android:text="21人评价" />
                </RelativeLayout>

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1dp"
                    android:background="@color/all" />

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/service_scope"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="服务区域:" />

                    <TextView
                        android:id="@+id/person_introduce"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:minLines="3"
                        android:paddingTop="5dp"
                        android:text="个人介绍" />
                </LinearLayout>
            </LinearLayout>
            </LinearLayout>
            
            <LinearLayout android:layout_height="wrap_content"
               android:layout_width="fill_parent"
                android:id="@+id/messager_discus_lin"
                android:orientation="horizontal">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@drawable/linear_boder"
                android:orientation="horizontal"
                android:padding="10dp" 
                >

                <TextView
                    android:id="@+id/all_discus"
                    android:layout_width="0dp"
                    android:drawableLeft="@drawable/like_off"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:layout_weight="2.5"
                    android:text="全部评价" />

                <TextView
                    android:id="@+id/discus_tv"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    android:text="94%好评度"
                    android:textColor="@color/red" />
            </LinearLayout>
            </LinearLayout>
            

</LinearLayout>
