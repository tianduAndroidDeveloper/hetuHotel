<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gray_light"
        android:orientation="vertical"
        android:padding="5dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/individual" />

        <TextView
            android:id="@+id/tv_order"
            style="@style/Personal_TextView"
            android:drawableLeft="@drawable/order"
            android:text="我的订单" />

        <TextView
            android:id="@+id/tv_prefer"
            style="@style/Personal_TextView"
            android:drawableLeft="@drawable/prefer"
            android:text="优惠券" />

        <TextView
            android:id="@+id/tv_member"
            style="@style/Personal_TextView"
            android:drawableLeft="@drawable/membership_card"
            android:text="会员卡" />
        
        <TextView
            android:id="@+id/tv_share"
            style="@style/Personal_TextView"
            android:drawableLeft="@drawable/order_status"
            android:text="我的分享" />

        <TextView
            android:id="@+id/tv_address"
            style="@style/Personal_TextView"
            android:drawableLeft="@drawable/add_ser"
            android:text="地址管理" />

        <TextView
            android:id="@+id/tv_aboutus"
            style="@style/Personal_TextView"
            android:drawableLeft="@drawable/about_us"
            android:text="关于我们" />

        <TextView
            android:id="@+id/tv_agreement"
            style="@style/Personal_TextView"
            android:drawableLeft="@drawable/agreement"
            android:text="服务协议" />

        <Button
            android:id="@+id/btn_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@drawable/red_bg"
            android:padding="10dp"
            android:text="联系客服"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="工作时间：9:30-22:00"
            android:textColor="@color/black" />
    </LinearLayout>

</ScrollView>