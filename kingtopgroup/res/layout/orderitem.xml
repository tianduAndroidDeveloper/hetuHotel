<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/linear_boder"
    android:orientation="vertical"
    android:padding="10dp" >

    <RelativeLayout
        android:id="@+id/mainluplationImageid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_item_image1"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/order1_1" 
            android:layout_marginRight="10dp">
        </ImageView>

        <RelativeLayout
            android:layout_toRightOf="@+id/order_item_image1"
            android:id="@+id/main2"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/order_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="太乙肩颈推拿" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/time"
                    android:drawablePadding="5dp"
                    android:text="45分钟 " />
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/main"
                android:id="@+id/main3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" 
                android:layout_marginTop="5dp">

                <TextView
                    android:gravity="center"
                    android:id="@+id/order_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/zuob"
                    android:text="￥78.00"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/order_item_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dip"
                    android:text="（1人起订）" />
            </LinearLayout>

            <RelativeLayout
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/main3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:id="@+id/button1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_bg"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="5dp"
                    android:text="立即预约"
                    android:textColor="@color/white" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>