<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/all"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/mainluplationImageid"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_margin="10dip"
        android:background="@drawable/linear_boder"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/order_item_image1"
            android:paddingLeft="5dp"
             android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:src="@drawable/order1_1" >
        </ImageView>

        <LinearLayout
            android:id="@+id/main2"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="2.5"
            android:orientation="vertical"
            android:layout_margin="5dip"
             >

            <LinearLayout
                android:id="@+id/main"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:orientation="horizontal"
                android:paddingTop="10dip" >

                <TextView
                    android:id="@+id/order_item_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="太乙肩颈推拿" />

                <ImageView
                    android:id="@+id/order_item_time"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:paddingLeft="10dip"
                    android:paddingBottom="8dp"
                    android:src="@drawable/time" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                    android:text="45分钟 " />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main3"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:paddingBottom="10dip" >

                <ImageView
                    android:id="@+id/order_item_zuo"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:src="@drawable/zuob" />

                <TextView
                    android:id="@+id/order_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="￥78.00"
                    android:textSize="12sp"
                    android:textColor="@color/red" />

                <TextView
                    android:id="@+id/order_item_person"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="10dip"
                     android:textSize="12sp"
                    android:text="（1人起订）" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/main4"
                android:layout_width="fill_parent"
                android:layout_height="30dp"
                android:gravity="center_vertical"
                android:paddingRight="10dp"
                android:paddingLeft="30dp"
                 android:layout_gravity="right"
                 android:layout_marginBottom="9dp"
                android:paddingTop="5dip" >

                <!--
              <TextView 
             android:id="@+id/orders"
             android:text="立即预定"
             android:layout_marginLeft="100px"
             android:paddingTop="50px"
             android:layout_height="wrap_content"
             android:layout_width="180px"
              android:textColor="@color/white"
              android:gravity="center_vertical"
             android:background="@color/red"
            ></TextView>
                -->

                <TextView
                    android:id="@+id/button1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:background="@drawable/btn_bg"
                    android:text="立即预约"
                     android:textSize="12sp"
                    android:paddingLeft="10dp"
                    android:textColor="@color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>