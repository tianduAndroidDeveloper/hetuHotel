<?xml version="1.0" encoding="utf-8"?>

<LinearLayout android:layout_height="match_parent"
             android:layout_width="match_parent"
             android:orientation="vertical"
  xmlns:android="http://schemas.android.com/apk/res/android">

 <ScrollView 
        android:id="@+id/scrollView1"
         android:layout_weight="8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/all"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@drawable/linear_boder"
        android:orientation="horizontal" >
       
        <FrameLayout android:layout_height="wrap_content"
             android:layout_weight="1"
            android:layout_width="0dp">
        
         <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:src="@drawable/add_yuan" />
         
        <TextView  
        android:layout_width="wrap_content"   
        android:layout_gravity="center"
        android:textColor="@color/red"
        android:layout_height="wrap_content"  
        android:text="地址"></TextView>
    
         </FrameLayout>
          
        <ImageView
            android:id="@+id/imageView1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:paddingLeft="5dp"
            android:layout_height="wrap_content"
            android:src="@color/gray" />
        
         <FrameLayout android:layout_height="wrap_content"
             android:layout_weight="1"
            android:layout_width="0dp">

        <ImageView
            android:id="@+id/imageView1"
              android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shuzi_yuan" />
        
         <TextView  
        android:layout_width="wrap_content"   
        android:layout_gravity="center"
        android:layout_height="wrap_content"  
        android:text="2"></TextView>
        </FrameLayout>
         
        <ImageView
            android:id="@+id/imageView1"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@color/gray" />
        
         
         <FrameLayout android:layout_height="wrap_content"
             android:layout_weight="1"
            android:layout_width="0dp">
        
        
        <ImageView
            android:id="@+id/imageView1"
             android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/shuzi_yuan" />
        
         <TextView  
        android:layout_width="wrap_content"   
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content"  
        android:text="3"></TextView>
        
        </FrameLayout>
    </LinearLayout>
    
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:background="@color/white"
        android:layout_margin="10dp"
        android:orientation="horizontal">
        
        <Button android:layout_height="wrap_content"
            android:id="@+id/for_me"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="给自己预约"
            android:clickable="true"
            android:textColor="@color/red"
            android:background="@drawable/shape_rb_pop"/>
        
           <Button android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:id="@+id/for_other"
            android:layout_weight="1"
             android:textColor="@color/red"
            android:text="给他人预约"
            android:background="@drawable/shape_rb_pop"/>
        </LinearLayout>
        
    
    <LinearLayout android:layout_height="wrap_content"
        android:layout_width="fill_parent"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:background="@drawable/linear_boder"
        android:orientation="vertical">
           
        <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">
           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="手机号："/>

        <EditText
            android:id="@+id/service_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
             android:padding="5dp"
            android:background="@null"
            android:inputType="textPersonName" >

            <requestFocus />
        </EditText>
        
        </LinearLayout>
       
          <ImageView android:layout_height="2dp"
              android:layout_width="fill_parent"
              android:background="@color/back"/>
            <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">
           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="街道名："/>

        <EditText
            android:id="@+id/service_address_street"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
             android:padding="5dp"
            android:background="@null"
            android:inputType="textPersonName" >
        </EditText>
        
        </LinearLayout>
       
          <ImageView android:layout_height="2dp"
              android:layout_width="fill_parent"
              android:background="@color/back"/>
          
          
            <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">
           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="门牌号："/>

        <EditText
            android:id="@+id/service_address_door_num"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@null"
            android:inputType="textPersonName" >
        </EditText>
        
        </LinearLayout>
       
          <ImageView android:layout_height="2dp"
              android:layout_width="fill_parent"
              android:background="@color/back"/>
          
            <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:orientation="horizontal">
           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="联系人："/>

        <EditText
            android:id="@+id/service_address_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:background="@null"
            android:inputType="textPersonName" >
        </EditText>
        
        </LinearLayout>
       
          <ImageView android:layout_height="2dp"
              android:layout_width="fill_parent"
              android:background="@color/back"/>
          
           <LinearLayout
               android:layout_width="fill_parent"
               android:layout_height="wrap_content"
               android:orientation="horizontal" >

           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="备注：（选填）"/>

        <EditText
            android:id="@+id/service_address_mark"
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:padding="5dp"
            android:background="@null"
            android:inputType="textPersonName" >
        </EditText>
        
        </LinearLayout>
          

    
     </LinearLayout>
     
    <LinearLayout android:layout_height="wrap_content"
        android:id="@+id/add_or_reduce"
        android:layout_width="fill_parent"
        android:orientation="vertical"
        android:layout_margin="10dip"
        android:background="@drawable/linear_boder">
         
           <TextView android:layout_height="wrap_content"
               android:padding="10dp"
               android:layout_width="wrap_content"
               android:text="常用地址"/>
           
             <ImageView android:layout_height="2dp"
              android:layout_width="fill_parent"
              android:background="@color/gray1"/>
          
               <LinearLayout android:layout_height="wrap_content"
                   android:padding="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">
           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="姓名："/>

        <TextView
            android:id="@+id/service_address_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="textPersonName" >
        </TextView>
        
        </LinearLayout>
        
                 <LinearLayout android:layout_height="wrap_content"
                     android:padding="5dp"
            android:layout_width="fill_parent"
            android:orientation="horizontal">
           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="手机号码："/>

        <TextView
            android:id="@+id/service_address_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="phone" >
      </TextView>
      
        <ImageView android:layout_height="wrap_content"
            android:id="@+id/add_address"
            android:layout_width="wrap_content"
            android:clickable="true"
            android:src="@drawable/circle_check"/>
        
        </LinearLayout>
        
                   <LinearLayout android:layout_height="wrap_content"
            android:layout_width="fill_parent"
            android:padding="10dp"
            android:orientation="horizontal">
           <TextView android:layout_height="wrap_content"
               android:layout_width="wrap_content"
               android:text="详细地址"/>

        <TextView
            android:id="@+id/service_address_address"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:inputType="text" >
        </TextView>
        
        </LinearLayout>
        
        
           </LinearLayout>

</LinearLayout>
   </ScrollView>
   
 
   <LinearLayout
    android:layout_width="fill_parent"
    android:gravity="right"
    android:layout_weight="2"
    android:layout_height="50dp" 
    android:orientation="horizontal" >
  

  <Button
      android:layout_width="fill_parent"
      android:id="@+id/service_address_next_button"
      android:layout_height="32dp"
      android:background="@drawable/btn_bg"
      android:textColor="@color/white"
      android:layout_margin="2dp"
      android:gravity="center"
      android:text="下一步" />

  </LinearLayout>
   </LinearLayout>
