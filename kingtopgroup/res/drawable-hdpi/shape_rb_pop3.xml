<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中是的button颜色 -->
    <item android:state_checked="true"><shape android:shape="rectangle">

            <!-- 填充色 -->
            <solid android:color="@android:color/holo_red_dark" />
            <!-- 边距 -->
            <padding android:bottom="5dp" android:left="-1dp" android:right="5dp" android:top="5dp" />
            <!--
        <stroke 
        android:width="0.35dip"
        android:color="@android:color/holo_red_dark" />
            -->
            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape></item>

    <!-- 未选中是的button颜色 -->
    <item android:state_checked="false"><shape android:shape="rectangle">

            <!-- 填充色 -->
            <solid android:color="@color/white" />
            <!-- 边距 -->
            <padding android:bottom="5dp" android:left="-1dp" android:right="5dp" android:top="5dp" />

            <stroke android:width="1px" android:color="@android:color/holo_red_dark" />

            <corners android:bottomLeftRadius="0dp" android:bottomRightRadius="5dp" android:topLeftRadius="0dp" android:topRightRadius="5dp" />
        </shape></item>

</selector>