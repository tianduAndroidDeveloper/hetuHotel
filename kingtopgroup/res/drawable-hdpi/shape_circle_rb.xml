<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中是的状态 -->
    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="@color/red" />

            <stroke android:width="2dip" android:color="@color/red" />

            <corners android:radius="100.0dip" />
        </shape></item>

    <!-- 未选中是的状态 -->
    <item android:state_checked="false"><shape android:shape="rectangle">

            <!-- 填充色 -->
            <solid android:color="@color/white" />

            <!-- 边框线，颜色 -->
            <stroke android:width="2dp" android:color="@color/red" />

            <corners android:radius="100.0dip" />
        </shape></item>

</selector>