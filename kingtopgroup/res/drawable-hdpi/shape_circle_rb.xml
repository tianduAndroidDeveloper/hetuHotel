<?xml version="1.0" encoding="UTF-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    
    <!--选中是的状态  -->
    <item android:state_checked="true"><shape android:shape="rectangle">
            <solid android:color="@color/red" />
            <!--
         <stroke 
        android:width="0.35dip"
        android:color="@android:color/holo_red_dark" />
            -->
            <corners android:radius="100.0dip" />
            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
        </shape></item>
        
    
    <!--未选中是的状态  -->
    <item android:state_checked="false"><shape android:shape="rectangle">
        
           <!--填充色  -->
            <solid android:color="@color/white" />
           
             <!--边框线，颜色  -->
            <stroke android:width="0.35dip" android:color="@android:color/holo_red_dark" />
               
             
            
            <corners android:radius="100.0dip" />

            <padding android:bottom="15dp" android:left="15dp" android:right="15dp" android:top="15dp" />
        </shape></item>

</selector>